<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/violate</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>
    
    <style name="daysText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    
    <style name="tvFilterTransaction">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="tvFilterBy">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="fragmentTopTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="tvMoney" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_50ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    
    <style name="detailTransactionType" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/light_20</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="detailTransactionTypeName" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/dark_100</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="dummy" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackCornerRadius">@dimen/_20sdp</item>
        <item name="trackThickness">@dimen/_12sdp</item>
        <item name="android:max">100</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="SelectedTabText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/yellow_100</item>
    </style>
</resources>